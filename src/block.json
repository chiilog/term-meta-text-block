{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "chiilog-term-meta-text-block/term-meta-text-block",
	"version": "0.1.0",
	"title": "Term Meta Text",
	"category": "widgets",
	"icon": "megaphone",
	"description": "タームメタの値を取得して表示するブロック",
	"example": {},
	"attributes": {
		"taxonomy": {
			"type": "string",
			"default": ""
		},
		"termId": {
			"type": "number",
			"default": 0
		},
		"termMetaKey": {
			"type": "string",
			"default": ""
		}
	},
	"supports": {
		"html": false,
		"color": {
			"text": true,
			"background": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"fontFamily": true,
			"appearance": true
		}
	},
	"textdomain": "term-meta-text-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
